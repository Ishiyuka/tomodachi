<h1>確認画面</h1>
<%= form_with(model: @message, url: messages_path, local: true) do |form| %>
  <%= image_tag(@message.image.url) if @message.image && @message.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "投稿する" %>
<% end %>

<%= form_with(model:@message, url:new_message_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>



