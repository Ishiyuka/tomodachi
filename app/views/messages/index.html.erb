<br>
<h1>投稿一覧</h1>
<p><%= notice %></p>

<table>
  <tr>
    <th>投稿</th>
  </tr>

<% @messages.each do |message| %>

  <tr>
  <td>ユーザー
  <%= message.user.name %></td>
  </tr>

  <tr>
    <td>タイトル
    <%= message.title %></td>
  </tr>

  <tr>
    <td>投稿内容
    <%= message.content %></td>
  </tr>
  
  <tr>
    <td><%= image_tag message.image.url %></td>
    <td><%= link_to '投稿内容確認', message_path(message.id) %></td>
    <td><%= link_to "投稿を編集する", edit_message_path(message.id) , data: { confirm: '編集しますか？' }%></td>
    <td><%= link_to '投稿を削除する', message_path(message.id), method: :delete ,data: { confirm: '本当に削除しますか？' }%></td>
  </tr>
<% end %>
</table>

<%= link_to '新しく投稿する', new_message_path %>
